<Window x:Class="Ome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ome" Height="400" Width="600" MinHeight="118" Background="Black">
    <DockPanel>
        <!-- Top Panel with Centered Menu Button -->
        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="10">
            <Button Content="" Width="60" Height="60" Click="MenuButton_Click" BorderBrush="Black">
                <Button.Background>
                    <ImageBrush ImageSource="/menu.png"/>
                </Button.Background>
            </Button>
        </StackPanel>

        <!-- Main content area for sound buttons -->
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="ButtonsPanel" Orientation="Vertical" Margin="10">
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
