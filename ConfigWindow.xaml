<Window x:Class="Ome.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration" Height="200" Width="300" Background="Black">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Save Config" Width="100" Margin="10" Click="SaveConfigButton_Click"/>
        <Button Content="Load Config" Width="100" Margin="10" Click="LoadConfigButton_Click"/>
        <Button Content="Close" Width="100" Margin="10" Click="CloseButton_Click"/>
    </StackPanel>
</Window>